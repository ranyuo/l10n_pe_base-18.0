<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ########################################################## -->
        <record id="l10n_pe_sunat_table_view_form" model="ir.ui.view">
            <field name="name">l10n.pe.sunat.table.form</field>
            <field name="model">l10n.pe.sunat.table</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="catalogs_concepts" string="Conceptos">
                                <field name="line_ids">
                                    <list>
                                        <field name="code"/>
                                        <field name="description"/>
                                        <field name="reference"/>
                                        <field name="active_concept"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- ########################################################## -->
        <record id="l10n_pe_sunat_table_view_tree" model="ir.ui.view">
            <field name="name">l10n.pe.sunat.table.tree</field>
            <field name="model">l10n.pe.sunat.table</field>
            <field name="arch" type="xml">
                <list create="1" delete="1" multi_edit="1">
                    <field name="name"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <record id="l10n_pe_sunat_table_action" model="ir.actions.act_window">
            <field name="name">Tablas SUNAT</field>
            <field name="res_model">l10n.pe.sunat.table</field>
            <field name="view_mode">list,form</field>
            <field eval="False" name="view_id"/>
        </record>

        <record id="l10n_pe_sunat_table_action_view_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">list</field>
            <field name="view_id" ref="l10n_pe_sunat_table_view_tree"/>
            <field name="act_window_id" ref="l10n_pe_sunat_table_action"/>
        </record>

        <record id="l10n_pe_sunat_table_action_view_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="l10n_pe_sunat_table_view_form"/>
            <field name="act_window_id" ref="l10n_pe_sunat_table_action"/>
        </record>

        <!-- ################################################## -->
        <record id="l10n_pe_catalogs_sunat_view_tree" model="ir.ui.view">
            <field name="name">l10n.pe.catalogs.sunat.tree</field>
            <field name="model">l10n.pe.catalogs.sunat</field>
            <field name="arch" type="xml">
                <list create="1" delete="1" multi_edit="1" default_group_by="associated_table_id">
                    <field name="code" />
                    <field name="associated_table_id"/>
                    <field name="description" optional="show"/>
                    <field name="active_concept"/>
                </list>
            </field>
        </record>

        <record id="l10n_pe_catalogs_sunat_view_form" model="ir.ui.view">
            <field name="name">l10n.pe.catalogs.sunat.form</field>
            <field name="model">l10n.pe.catalogs.sunat</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="associated_table_id" readonly="True"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="description"/>
                                <field name="reference"/>
                                <field name="active_concept"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="l10n_pe_catalogs_sunat_action" model="ir.actions.act_window">
            <field name="name">Catalogos SUNAT</field>
            <field name="res_model">l10n.pe.catalogs.sunat</field>
            <field name="view_mode">list,form</field>
            <field eval="False" name="view_id"/>
        </record>

        <record id="l10n_pe_catalogs_sunat_action_view_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">list</field>
            <field name="view_id" ref="l10n_pe_catalogs_sunat_view_tree"/>
            <field name="act_window_id" ref="l10n_pe_catalogs_sunat_action"/>
        </record>

        <record id="l10n_pe_catalogs_sunat_action_view_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="l10n_pe_catalogs_sunat_view_form"/>
            <field name="act_window_id" ref="l10n_pe_catalogs_sunat_action"/>
        </record>

        <!-- ################################################################# -->
        <menuitem name="CatÃ¡logos SUNAT" id="sunat_menu_finance_configuration" parent="account.menu_finance_configuration" sequence="10"/>
        <menuitem name="Tablas SUNAT" id="table_sunat_menu" parent="sunat_menu_finance_configuration" sequence="1" action="l10n_pe_sunat_table_action"/>
        <menuitem name="Conceptos de Tablas SUNAT" id="catalogs_sunat_menu" parent="sunat_menu_finance_configuration" sequence="2" action="l10n_pe_catalogs_sunat_action"/>
    </data>
</odoo>