<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_invoice_document_edi_inherit_spot" inherit_id="l10n_pe_edi.report_invoice_document">

        <xpath expr="//img[@t-if='extra_edi_vals']" position="replace"/>
        <xpath expr="//table[@t-if='spot']" position="replace">
            <div class="row" style="font-size: 12px; page-break-inside: avoid;">
                <div t-if="spot" class="col-12 mt8 mb8" style="border: 1px solid #555 !important">
                    <div class="ml8 mt8 mb8" >
                        <div>
                            <strong><t t-out="'Operación sujeta al Sistema de Pago de Obligaciones Tributarias con el Gobierno Central.'"/></strong>
                        </div>
                        <div>
                            <strong>Código de Detracción: </strong><t t-out="'%s'%(o.codigo_detraccion)"/>
                        </div>
                        <div>
                            <strong>% Detracción: </strong><t t-out="'%s'%(o.porcentaje_detraccion or 0.00)"/>
                        </div>
                        <div>
                            <strong>Monto Detracción: </strong><t t-out="'%s %s'%(o.company_currency_id.symbol or '', o.monto_detraccion or 0.00)"/>
                        </div>
                        <div>
                            <strong>Cuenta bancaria de detracción: </strong><t t-out="'%s'%(o.cuenta_detraccion or '')"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row"  style="font-size: 12px; page-break-inside: avoid;">
                <div t-if="o.is_retention" class="col-7 mt8 mb8" style="border: 1px solid #555 !important">
                    <div class="ml8 mt8 mb8" >
                        <div>
                            <strong><t t-out="'Información de la retención:'"/></strong>
                        </div>
                        <div>
                            <strong>Base imponible de la retención: </strong><span t-field="o.amount_total" t-options="{'currency_field':'currency_id'}"/>
                        </div>
                        <div>
                            <strong>Porcentaje de la retención: </strong><span t-esc="int(o.retention_percentage)" /> %
                        </div>
                        <div>
                            <strong>Monto de la retención: </strong><span t-field="o.retention_amount" options="{'currency_field':'currency_id'}"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row"  style="font-size: 12px; page-break-inside: avoid;">
                <div t-attf-class="col-7 pt8" t-if="extra_edi_vals" name="qr_table">
                    <table>
                        <tbody>
                            <tr>
                                <td>
                                    <div class=" mt8">
                                        <img t-if="extra_edi_vals" t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', extra_edi_vals['qr_str'], 90, 90)"/>
                                    </div>
                                </td>
                                <td style="vertical-align: top;">
                                    <div class="ml16 mt8 mb8 pt0" style="font-size: 12px;">
                                        <span t-field="o.company_id.l10n_pe_edi_qr_comment_report_invoice_document" />
                                        <br/>
                                        <span>Hash: <t t-esc="extra_edi_vals['qr_str'].split('|')[-2]"/></span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
