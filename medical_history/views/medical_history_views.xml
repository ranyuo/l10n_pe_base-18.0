<odoo>
    <data>
        <!-- Medical Clinical History -->
        <record id="view_medical_clinical_history_tree" model="ir.ui.view">
            <field name="name">medical.clinical.history.tree</field>
            <field name="model">medical.clinical.history</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Paciente"/>
                    <field name="document_type_id"/>
                    <field name="document_number"/>
                    <field name="evaluation_date"/>
                    <field name="insurance_type_id"/>
                </tree>
            </field>
        </record>

        <record id="view_medical_clinical_history_form" model="ir.ui.view">
            <field name="name">medical.clinical.history.form</field>
            <field name="model">medical.clinical.history</field>
            <field name="arch" type="xml">
                <form string="Historia Clínica">
                    <sheet>
                        <group>
                            <group string="Paciente">
                                <field name="paternal_last_name"/>
                                <field name="maternal_last_name"/>
                                <field name="given_names"/>
                                <field name="document_type_id"/>
                                <field name="document_number"/>
                                <field name="birth_date"/>
                                <field name="sex"/>
                            </group>
                            <group string="Cobertura y Evaluación">
                                <field name="insurance_type_id"/>
                                <field name="insurance_number"/>
                                <field name="blood_group_id"/>
                                <field name="rh_factor_id"/>
                                <field name="evaluation_date"/>
                                <field name="evaluation_time" widget="float_time"/>
                                <group string="Edad" col="3">
                                    <field name="age_years"/>
                                    <field name="age_months"/>
                                    <field name="age_days"/>
                                </group>
                            </group>
                        </group>

                        <notebook>
                            <page string="Filiación">
                                <group>
                                    <group>
                                        <field name="civil_status_id"/>
                                        <field name="ethnicity_id"/>
                                        <field name="education_level_id"/>
                                        <field name="religion_id"/>
                                        <field name="occupation_id"/>
                                    </group>
                                    <group>
                                        <field name="phone"/>
                                        <field name="mobile"/>
                                        <field name="address"/>
                                    </group>
                                </group>
                                <group string="Lugar de Nacimiento" col="3">
                                    <field name="birth_department_id"/>
                                    <field name="birth_province_id"/>
                                    <field name="birth_district_id"/>
                                </group>
                                <group string="Lugar de Residencia" col="3">
                                    <field name="residence_department_id"/>
                                    <field name="residence_province_id"/>
                                    <field name="residence_district_id"/>
                                </group>
                                <group string="Familia">
                                    <group>
                                        <field name="father_name"/>
                                        <field name="father_age"/>
                                        <field name="father_education_level_id"/>
                                        <field name="father_occupation_id"/>
                                    </group>
                                    <group>
                                        <field name="mother_name"/>
                                        <field name="mother_age"/>
                                        <field name="mother_education_level_id"/>
                                        <field name="mother_occupation_id"/>
                                    </group>
                                    <group>
                                        <field name="spouse_name"/>
                                        <field name="spouse_age"/>
                                        <field name="spouse_education_level_id"/>
                                        <field name="spouse_occupation_id"/>
                                    </group>
                                </group>
                                <group string="Responsable">
                                    <field name="responsible_name"/>
                                    <field name="responsible_document"/>
                                    <field name="responsible_phone"/>
                                </group>
                            </page>
                            <page string="Enfermedad Actual">
                                <group>
                                    <group>
                                        <field name="disease_duration"/>
                                        <field name="disease_course_id"/>
                                    </group>
                                    <field name="main_symptoms" widget="text"/>
                                    <field name="related_story" widget="text"/>
                                    <group string="Exámenes Previos">
                                        <field name="previous_auxiliary_tests" widget="text"/>
                                        <field name="previous_auxiliary_results" widget="text"/>
                                    </group>
                                    <field name="previous_treatment" widget="text"/>
                                </group>
                            </page>
                            <page string="Funciones Biológicas">
                                <group col="2">
                                    <field name="sleep_state_id"/>
                                    <field name="appetite_state_id"/>
                                    <field name="thirst_state_id"/>
                                    <field name="urine_state_id"/>
                                    <field name="stool_state_id"/>
                                </group>
                                <field name="notes" widget="text"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_medical_clinical_history" model="ir.actions.act_window">
