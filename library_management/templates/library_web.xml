<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="book_list_template" name="Lista de Libros de la Biblioteca">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container mt-4">
                    <h1>Nuestra Colección de Libros</h1>

                    <form action="/biblioteca" method="get" class="mb-4">
                        <div class="input-group">
                            <input type="text" name="search" class="form-control" placeholder="Buscar por título..." t-att-value="search"/>
                            <button type="submit" class="btn btn-primary">Buscar</button>
                        </div>
                    </form>

                    <t t-if="search">
                        <t t-if="books">
                            <h2>Resultados para '<t t-esc="search"/>'</h2>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Título</th>
                                        <th>Autor</th>
                                        <th>Ubicación</th>
                                        <th>Estado</th> </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="books" t-as="book">
                                        <tr t-attf-class="{{ 'table-success' if book.is_available else 'table-danger' }}">
                                            <td><t t-esc="book.name"/></td>
                                            <td><t t-esc="book.author"/></td>
                                            <td><t t-esc="book.address_id.name"/></td>
                                            <td>
                                                <t t-if="book.is_available">Disponible</t>
                                                <t t-else="">No Disponible</t>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                        <t t-else="">
                            <div class="alert alert-warning" role="alert">
                                No se encontraron resultados para su búsqueda: "<strong><t t-esc="search"/></strong>".
                            </div>
                        </t>
                    </t>
                    
                    <t t-else="">
                        <div class="alert alert-info" role="alert">
                            Por favor, ingrese un término en la barra de búsqueda para encontrar un libro.
                        </div>
                    </t>

                </div>
            </div>
        </t>
    </template>
    
    <record id="menu_library" model="website.menu">
        <field name="name">Biblioteca</field>
        <field name="url">/biblioteca</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">30</field>
    </record>

</odoo>