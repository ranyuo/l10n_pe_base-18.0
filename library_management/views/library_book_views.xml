<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="library_book_view_list" model="ir.ui.view">
            <field name="name">library.book.list</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <list string="Libros">
                    <field name="name"/>
                    <field name="author"/>
                    <field name="is_available"/>
                </list>
            </field>
        </record>

        <record id="library_book_view_form" model="ir.ui.view">
            <field name="name">library.book.form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form string="Libro">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="author"/>
                            <field name="is_available"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="library_book_action" model="ir.actions.act_window">
            <field name="name">Libros</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Crea tu primer libro!
                </p><p>
                    Aquí puedes registrar todos los libros de tu biblioteca.
                </p>
            </field>
        </record>

        <menuitem id="library_menu_root"
                  name="Biblioteca"
                  sequence="10"/>

        <menuitem id="library_book_menu"
                  name="Libros"
                  parent="library_menu_root"
                  action="library_book_action"
                  sequence="10"/>

    </data>
</odoo>