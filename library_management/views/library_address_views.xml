            <field name="name">library.address.list</field>
            <field name="model">library.address</field>
            <field name="arch" type="xml">
                <list string="Direcciones">
                    <field name="name"/>
                    <field name="city"/>
                    <field name="country_id"/>
                </list>
            </field>
        </record>

        <record id="library_address_view_form" model="ir.ui.view">
