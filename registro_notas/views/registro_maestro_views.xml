<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Carreras -->
    <record id="view_registro_carrera_tree" model="ir.ui.view">
        <field name="name">registro.carrera.list</field>
        <field name="model">registro.carrera</field>
        <field name="arch" type="xml">
            <list string="Carreras">
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_registro_carrera_form" model="ir.ui.view">
        <field name="name">registro.carrera.form</field>
        <field name="model">registro.carrera</field>
        <field name="arch" type="xml">
            <form string="Carrera">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_registro_carrera" model="ir.actions.act_window">
        <field name="name">Carreras</field>
        <field name="res_model">registro.carrera</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_active': True}</field>
    </record>

    <!-- Cursos -->
    <record id="view_registro_curso_tree" model="ir.ui.view">
        <field name="name">registro.curso.list</field>
        <field name="model">registro.curso</field>
        <field name="arch" type="xml">
            <list string="Cursos">
                <field name="name"/>
                <field name="code"/>
                <field name="career_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_registro_curso_form" model="ir.ui.view">
        <field name="name">registro.curso.form</field>
        <field name="model">registro.curso</field>
        <field name="arch" type="xml">
            <form string="Curso">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="career_id"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_registro_curso" model="ir.actions.act_window">
        <field name="name">Cursos</field>
        <field name="res_model">registro.curso</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_active': True}</field>
    </record>
</odoo>
