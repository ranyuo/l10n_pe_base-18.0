<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_registro_notas" name="Consulta de Notas">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="row">
                    <div class="col-12 col-md-8 offset-md-2">
                        <h1 class="mb-4 text-center">Consulta de Notas</h1>
                        <form method="post" class="mb-4" t-att-action="request.httprequest.path">
                            <div class="mb-3">
                                <label class="form-label">Código de Alumno</label>
                                <input type="text" name="student_code" class="form-control" placeholder="Ingrese su código" t-att-value="student_code or ''" required="required"/>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Consultar</button>
                            </div>
                        </form>

                        <t t-if="records">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Curso</th>
                                            <th>Carrera</th>
                                            <th>Nota</th>
                                            <th>Observaciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="records" t-as="record">
                                            <tr>
                                                <td><t t-esc="record.course_name"/></td>
                                                <td><t t-esc="record.career_name"/></td>
                                                <td><t t-esc="record.grade"/></td>
                                                <td><t t-esc="record.observation or ''"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                        <t t-elif="no_results">
                            <div class="alert alert-warning" role="alert">
                                No se encontraron notas con el código proporcionado.
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
