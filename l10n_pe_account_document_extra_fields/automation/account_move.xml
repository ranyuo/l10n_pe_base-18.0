        <field name="model_id" ref="account.model_account_move_line"/>
        <field name="state">code</field>
        <field name="code">
for record in records:
    record.write({'id_mov':record.id})            
        </field>
    </record>
    
    <record id="account_move_line_automation_copy_id" model="base.automation">
        <field name="name">Copy ID to id_mov - account.move.line</field>
        <field name="model_id" ref="account.model_account_move_line"/>
        <field name="trigger">on_create</field>
        <field name="filter_pre_domain">[]</field>
        <field name="filter_domain">[]</field>
        <field name="action_server_ids" eval="[(4,ref('l10n_pe_account_document_extra_fields.acount_move_line_action_server_copy_id'))]"/>
    </record>
    
</odoo>
