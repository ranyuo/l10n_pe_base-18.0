<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!--COPIA EL VALOR DEL ID A ID_MOV DESPUES DE LA CREACIÓN DE UN REGISTRO ACCOUNT.MOVE-->
    
    <record id="acount_move_action_server_copy_id" model="ir.actions.server">
        <field name="name">Copy ID to id_mov</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="state">code</field>
        <field name="code">
for record in records:
    record.write({'id_mov':record.id})            
        </field>
    </record>
    
    <record id="account_move_automation_copy_id" model="base.automation">
        <field name="name">Copy ID to id_mov - account.move</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="trigger">on_create</field>
        <field name="filter_pre_domain">[]</field>
        <field name="filter_domain">[]</field>
        <field name="action_server_ids" eval="[(4,ref('l10n_pe_account_document_extra_fields.acount_move_action_server_copy_id'))]"/>
    </record>
    
    
    <!--COPIA EL VALOR DEL ID A ID_MOV DESPUES DE LA CREACIÓN DE UN REGISTRO ACCOUNT.MOVE.LINE-->
    
    <record id="acount_move_line_action_server_copy_id" model="ir.actions.server">
