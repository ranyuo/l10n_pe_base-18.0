<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_payment_inherit_force_form" model="ir.ui.view">
            <field name="name">view_account_payment_inherit_force_form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="force_destination_account_id" 
                            invisible="payment_type == 'transfer'" 
                            readonly="state != 'draft'" 
                            groups="l10n_pe_account_document_extra_fields.group_payment_force_account"/>
                </field>
            </field>
        </record>



        <record id="view_account_payment_inherit_force_2_form" model="ir.ui.view">
            <field name="name">view_account_payment_inherit_force_2_form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                
                <field name="memo" position="after">
                    <field name="operation_number" readonly="state != 'draft'"/>
                </field>

                <xpath expr="//group[@name='group2']" position="after">
                    <field name="aplication_aml_id" readonly="True" invisible="aplication_aml_id in [False,None,'']"/>
                    <field name="l10n_pe_prefix_code" readonly="state != 'draft'"/>
                    <field name="l10n_pe_invoice_number" readonly="state != 'draft'"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>