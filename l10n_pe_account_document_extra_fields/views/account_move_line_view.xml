<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <data>

          <record id="view_account_move_line_light_multi_company_tree" model="ir.ui.view">
               <field name="name">account.move.line.light.multi.company</field>
               <field name="model">account.move.line</field>
               <field name="arch" type="xml">

                    <list string="Journal Items" create="false" edit="true" expand="context.get('expand', False)" multi_edit="1" sample="1">

                         <field name="id_mov"/>
                         <field name="move_id" column_invisible="True"/>
                         <field name="invoice_date" string="Invoice Date" optional="hide"/>
                         <field name="date" readonly="1"/>
                         <field name="company_id" column_invisible="True"/>
                         <field name="company_id" groups="base.group_multi_company" readonly="1" optional="hide"/>
                         <field name="journal_id" readonly="1" options="{&quot;no_open&quot;:True}" optional="hide"/>
                         <field name="move_name" string="Journal Entry" widget="open_move_widget"/>
                         <field name="account_id" options="{'no_open': True, 'no_create': True}" domain="[('company_ids', 'parent_of', company_id), ('deprecated', '=', False)]" groups="account.group_account_readonly"/>
                         <field name="partner_id" optional="show" readonly="move_type != 'entry'"/>
                         <field name="ref" optional="hide" readonly="False"/>
                         <field name="name" optional="show"/>
                         <field name="amount_currency" groups="base.group_multi_currency" optional="show" readonly="1" invisible="is_same_currency"/>
                         <field name="currency_id" groups="base.group_multi_currency" optional="hide" string="Currency" readonly="1" invisible="is_same_currency"/>
                         <field name="debit" sum="Total Debit" readonly="1"/>
                         <field name="credit" sum="Total Credit" readonly="1"/>
                         <field name="date_maturity" readonly="1" optional="hide"/>
                         

                         <field name="move_type" column_invisible="True"/>
                         <field name="is_same_currency" column_invisible="True"/>

                    </list>
               </field>
          </record>


          <record id="action_account_moves_all_line_light_multi_company_tree" model="ir.actions.act_window">
               <field name="name">Apuntes Contables</field>
               <field name="res_model">account.move.line</field>
               <field name="domain">[('display_type', 'not in', ('line_section', 'line_note'))]</field>
               <!--<field name="context">{'search_default_partner_id': [active_id], 'default_partner_id': active_id, 'search_default_posted':1}</field>-->
               <field name="view_id" ref="view_account_move_line_light_multi_company_tree"/>
          </record>


          <menuitem id="menu_view_light_account_codlan" name="Vistas Ligeras" parent="account.menu_finance_entries" groups="account.group_account_invoice" sequence="37">

               <menuitem id="menu_account_moves_all_line_light_multi_company" name="Apuntes Contables" groups="account.group_account_invoice" action="action_account_moves_all_line_light_multi_company_tree" sequence="1"/>

        </menuitem>


     </data>

</odoo>