<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View edu.partner.document View List -->
    <record id="view_edu_partner_document_list" model="ir.ui.view">
        <field name="name">view.edu.partner.document.list</field>
        <field name="model">edu.partner.document</field>
        <field name="arch" type="xml">
            <list string="Certificados y documentos">
                <field name="partner_id"/>
                <field name="partner_vat"/>
                <field name="partner_code"/>
                <field name="name"/>
                <field name="document_type"/>
                <field name="issue_date" optional="show" />
                <field name="start_date" optional="hide" />
                <field name="end_date" optional="hide" />
                <field name="total_hours" optional="hide" />
                <field name="educational_institution_id" optional="show" />
            </list>
        </field>
    </record>

    <!-- View edu.partner.document form -->
    <record id="view_edu_partner_document_form" model="ir.ui.view">
        <field name="name">view.edu.partner.document.form</field>
        <field name="model">edu.partner.document</field>
        <field name="arch" type="xml">
            <form string="Edu Partner Document">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Nombres/Certificado/Diploma..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" />
                            <field name="partner_vat" />
                            <field name="partner_code" />
                            <field name="partner_phone" />
                            <field name="partner_email" />
                        </group>
                        <group>
                            <field name="document_type" />
                            <field name="issue_date" />
                            <field name="total_hours" />
                            <field name="educational_institution_id" />
                            <field name="file" />
                            <field name="filename" invisible="1" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="start_date" />
                        </group>
                        <group>
                            <field name="end_date" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View edu.partner.document search -->
    <record id="view_edu_partner_document_search" model="ir.ui.view">
        <field name="name">view.edu.partner.document.search</field>
        <field name="model">edu.partner.document</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Nombre"/>
                <field name="partner_id" string="Contacto"/>
                <field name="document_type" string="Tipo de documento"/>
                <group expand="1" string="Group By">
                    <filter string="document_type" name="document_type" domain="[]" context="{'group_by':'document_type'}"/>
                    <filter string="partner_id" name="partner_id" domain="[]" context="{'group_by':'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action edu.partner.document -->
    <record id="action_edu_partner_document" model="ir.actions.act_window">
        <field name="name">Certificados</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">edu.partner.document</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Partner Document.
            </p>
        </field>
    </record>

</odoo>
