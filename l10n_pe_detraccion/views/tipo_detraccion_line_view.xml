<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="tipo_detraccion_line_search" model="ir.ui.view">
            <field name="name">Detalle Tipo Detraccion</field>
            <field name="model">tipo.detraccion.line</field>
            <field name="arch" type="xml">

                <search string="Buscar Detalle Tipo Detraccion">

                    <field name="detraccion_id"/>
                    <field name="product_id"/>
                    <field name="amount"/>
                    <field name="porcentaje"/>
                    <field name="date"/>

                </search>

            </field>
        </record>


        <record id="tipo_detraccion_line_form" model="ir.ui.view">
            <field name="name">tipo.detraccion.line.form</field>
            <field name="model">tipo.detraccion.line</field>
            <field name="arch" type="xml">
                <form string="Detracciones">
                    <sheet>
                            
                        <group>

                            <field name="detraccion_id" options="{'no_create': True, 'no_create_edit':True}"/>

                            <field name="product_id" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="amount"/>
                            <field name="porcentaje"/>
                        </group>

                        <group>
                            <field name="date"/>

                        </group>

                    </sheet>

                </form>
            </field>
        </record>


        <record id="tipo_detraccion_line_tree" model="ir.ui.view">
            <field name="name">tipo.detraccion.line.tree</field>
            <field name="model">tipo.detraccion.line</field>
            <field name="arch" type="xml">

                <list string="Detalle Tipo Detraccion">
                    <field name="detraccion_id"/>
                    <field name="product_id"/>
                    <field name="amount"/>
                    <field name="porcentaje"/>
                    <field name="date"/>
                </list>

            </field>
        </record>


        <record id="tipo_detraccion_line_action" model="ir.actions.act_window">
            <field name="name">Detalle Tipo Detracciones</field>
            <field name="res_model">tipo.detraccion.line</field>
            <field name="search_view_id" ref="tipo_detraccion_line_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click aqui para crear un Detalle de Detraccion
                </p>
                <p>
                    Detalle Tipo Detraccion
                </p>
            </field>
        </record>


        <menuitem action="tipo_detraccion_line_action" id="tipo_detracciones_line_id" parent="root_tipo_detracciones" sequence="20"/>

    </data>
</odoo>
